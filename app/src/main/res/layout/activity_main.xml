<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E74F12"
        android:layout_marginBottom="5dp">
    <ImageButton
        android:layout_width="27.65dp"
        android:layout_height="20dp"
        android:src="@drawable/group_2246"
        android:background="#E74F12"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Home"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/menu"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:layout_width="23.85dp"
            android:layout_height="29.61dp"
            android:src="@drawable/group_1853"
            android:background="#E74F12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent a Motorbike"
        android:textSize="20dp"
        android:textColor="#203738"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motorbike Delivery Location"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="5dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textSize="14dp"
            android:textColor="#E74F12"
            android:layout_marginVertical="5dp"
            />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_drawable"
        android:hint="Select Location"
        android:textSize="14dp"
        android:padding="13dp"
        android:layout_marginHorizontal="22dp"
        android:textColorHint="#BBBBBB"
        android:drawableRight="@drawable/group_1854"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Period"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textSize="14dp"
            android:textColor="#E74F12"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_drawable"
            android:hint="Start Date"
            android:textSize="14dp"
            android:padding="13dp"
            android:layout_marginLeft="22dp"
            android:textColorHint="#BBBBBB"
            android:drawableRight="@null"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/calendar_days"
                android:onClick="showStartDatePicker"
                android:background="@color/white"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_drawable"
            android:hint="End Date"
            android:textSize="14dp"
            android:padding="13dp"
            android:layout_marginRight="22dp"
            android:textColorHint="#BBBBBB"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/calendar_days"
                android:onClick="showEndDatePicker"
                android:background="@color/white"
                android:layout_marginRight="30dp"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Time"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textSize="14dp"
            android:textColor="#E74F12"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_drawable"
        android:hint="Dropoff Time"
        android:textSize="14dp"
        android:padding="13dp"
        android:layout_marginHorizontal="22dp"
        android:textColorHint="#BBBBBB"
        android:drawableRight="@drawable/clock_three"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motorbike Type"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textSize="14dp"
            android:textColor="#E74F12"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        tools:itemCount="5"
        tools:listitem="@layout/card_view_design"
        android:orientation="horizontal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motorbike Age"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" *"
            android:textSize="14dp"
            android:textColor="#E74F12"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        tools:itemCount="5"
        tools:listitem="@layout/card_view_design1"
        android:orientation="horizontal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional equipment not guaranteed "
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/path_2833"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_drawable"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="10dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginHorizontal="22dp"
        style="@style/SpinnerStyle"
        android:layout_marginVertical="10dp"
        />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:textSize="10dp"
            android:textColor="#E74F12"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandatory Fields"
            android:textSize="10dp"
            android:textColor="#203738"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />


</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_drawable"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Motorbike"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:textColor="#FFFFFF"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>